{% extends 'base.html.twig' %}

{% block title %}Source index{% endblock %}

{% block body %}
    <h1>Source index</h1>
    <a href="{{ path('admin') }}">Retour Ã  l'accueil<a/>
    <br/><br/>
    <a href="{{ path('source_new') }}">Create new</a>
    <br/><br/>

    <table class="table">
        <thead>
            <tr>
                <th rowspan="2">Id</th>
                <th rowspan="2">Name</th>
                <th rowspan="2">Abbreviation</th>
                <th rowspan="2">actions</th>
                <th colspan="3">Part</th>
            </tr>
            <tr>
                <th>Add</th>
                <th>Infos</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for source in sources %}
            <tr>
                <td>{{ source.id }}</td>
                <td>{{ source.name }}</td>
                <td>{{ source.abbreviation }}</td>
                <td>
                    <a href="{{ path('source_edit', {'id': source.id}) }}">edit</a>
                    {{ include('assets/source/_delete_form.html.twig') }}
                </td>
                <td>
                    <a href="{{ path('source_part_new', { 'id': source.id }) }}">New part</a>
                </td>
                <td>
                    <ul>
                        {% for p in source.parts|sort((a, b) => a.number <=> b.number) %}
                            <li>{{ p.number }} - {{ p.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                        {% for p in source.parts|sort((a, b) => a.number <=> b.number) %}
                            <li>
                                <a href="{{ path('source_part_edit', {'id': p.id}) }}">edit part</a>
                                {{ include('assets/source_part/_delete_form.html.twig') }}    
                            </li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
