{% extends 'base.html.twig' %}

{% block title %}Damage index{% endblock %}

{% block body %}
    <h1>Damage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Abbreviation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for damage in damages %}
            <tr>
                <td>{{ damage.id }}</td>
                <td>{{ damage.name }}</td>
                <td>{{ damage.abbreviation }}</td>
                <td>
                    <a href="{{ path('app_assets_damage_show', {'id': damage.id}) }}">show</a>
                    <a href="{{ path('app_assets_damage_edit', {'id': damage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_assets_damage_new') }}">Create new</a>
{% endblock %}
