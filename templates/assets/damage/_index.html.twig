<div class="accordion-item">
    <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#damage" aria-expanded="true" aria-controls="collapseOne">
            Types de dégâts    
        </button>
    </h2>
    <a href="{{ path('damage_new') }}">Create new</a>
    <div id="damage" class="accordion-collapse collapse" data-bs-parent="#divers">
        <div class="accordion-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for damage in damages %}
                    <tr>
                        <td>{{ damage.id }}</td>
                        <td>{{ damage.abbreviation }}</td>
                        <td>
                            <a href="{{ path('damage_edit', {'id': damage.id}) }}">edit</a>
                            {{ include('assets/damage/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>