<div class="accordion-body">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for damage in damages %}
            <tr>
                <td>{{ damage.id }}</td>
                <td>{{ damage.abbreviation }}</td>
                <td>
                    <a href="{{ path('damage_edit', {'id': damage.id}) }}">edit</a>
                    {{ include('assets/damage/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>