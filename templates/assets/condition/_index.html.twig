<div class="accordion-item">
    <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#condition" aria-expanded="true" aria-controls="collapseOne">
                Conditions
        </button>
    </h2>
    <a href="{{ path('condition_new') }}">Create new</a>
    <div id="condition" class="accordion-collapse collapse" data-bs-parent="#divers">
        <div class="accordion-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for condition in conditions %}
                    <tr>
                        <td>{{ condition.id }}</td>
                        <td>{{ condition.name }}</td>
                        <td>
                            <a href="{{ path('condition_edit', {'id': condition.id}) }}">edit</a>
                            {{ include('assets/condition/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>