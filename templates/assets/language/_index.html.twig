<div class="accordion-body">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Abbreviation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for language in languages %}
            <tr>
                <td>{{ language.id }}</td>
                <td>{{ language.abbreviation }}</td>
                <td>
                    <a href="{{ path('language_edit', {'id': language.id}) }}">edit</a>
                    {{ include('assets/language/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>