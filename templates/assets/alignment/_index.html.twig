<div class="accordion-body">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Abbreviation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for alignment in alignments %}
            <tr>
                <td>{{ alignment.id }}</td>
                <td>{{ alignment.name }}</td>
                <td>{{ alignment.abbreviation }}</td>
                <td>
                    <a href="{{ path('alignment_edit', {'id': alignment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>