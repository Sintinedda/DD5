{% extends 'base.html.twig' %}

{% block title %}Specialty index{% endblock %}

{% block body %}
    <h1>Specialty index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>D</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for specialty in specialties %}
            <tr>
                <td>{{ specialty.id }}</td>
                <td>{{ specialty.name }}</td>
                <td>{{ specialty.slug }}</td>
                <td>{{ specialty.d }}</td>
                <td>
                    <a href="{{ path('app_classes_specialty_show', {'id': specialty.id}) }}">show</a>
                    <a href="{{ path('app_classes_specialty_edit', {'id': specialty.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_classes_specialty_new') }}">Create new</a>
{% endblock %}
