<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <meta name="view-transition" content="same-origin" />
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('assets/css/nav.css') }}" rel="stylesheet"/>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="{{ asset('assets/js/nav.js') }}"></script>
        {% endblock %}
    </head>
    <body class="body" id="{% block body_id %}{% endblock %}">
        <header>
            {% block header %}
                {{ render(controller('App\\Controller\\View\\NavController::nav', { 'route': app.request.attributes.get('_route') })) }}
            {% endblock %}
        </header>
        <main>
            {% block main %}{% endblock %}
        </main>
    </body>
</html>
