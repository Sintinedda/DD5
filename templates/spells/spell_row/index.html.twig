{% extends 'base.html.twig' %}

{% block title %}SpellRow index{% endblock %}

{% block body %}
    <h1>SpellRow index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>D1</th>
                <th>D2</th>
                <th>D3</th>
                <th>D4</th>
                <th>D5</th>
                <th>D6</th>
                <th>D7</th>
                <th>D8</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for spell_row in spell_rows %}
            <tr>
                <td>{{ spell_row.id }}</td>
                <td>{{ spell_row.number }}</td>
                <td>{{ spell_row.d1 }}</td>
                <td>{{ spell_row.d2 }}</td>
                <td>{{ spell_row.d3 }}</td>
                <td>{{ spell_row.d4 }}</td>
                <td>{{ spell_row.d5 }}</td>
                <td>{{ spell_row.d6 }}</td>
                <td>{{ spell_row.d7 }}</td>
                <td>{{ spell_row.d8 }}</td>
                <td>
                    <a href="{{ path('app_spells_spell_row_show', {'id': spell_row.id}) }}">show</a>
                    <a href="{{ path('app_spells_spell_row_edit', {'id': spell_row.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_spells_spell_row_new') }}">Create new</a>
{% endblock %}
